<!-- Модальное окно -->
<div class="modal fade" id="DeviceModal" tabindex="-1" aria-labelledby="DeviceModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="DeviceModalLabel">Заголовок модального окна</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
        <input id="Device_ID" type="hidden" />
      </div>
      <div class="modal-body">
        <div class="form-horizontal">
                <div>
                    <label class="control-label col-md-4" for="edSerialNumber">Серийный номер</label>
                    <div class="col-md-12">
                        <input id="edSerialNumber" type="text" class="form-control" />
                    </div>
                </div>
                <div>
                    <label class="control-label col-md-1" for="cbRevisions">Ревизия</label>
                    <div class="col-md-12">
                       <select class="form-select" id="cbRevisions"> </select>
                    </div>
                </div>
                <div id="divSaveDeviceMessage"></div>
            </div>
      </div>
      <div class="modal-footer"> 
        <button id="btnDeviceSave" type="button" class="btn btn-primary">Сохранить изменения</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
      </div>
    </div>
  </div>
</div>
